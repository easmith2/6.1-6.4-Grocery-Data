<!DOCTYPE html>
<html>
<head>
  <title>GroceryData</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_customer %>
  Signed in as <%= current_customer.name %> | <%= link_to 'Sign out', '/signout' %>
<% else %>
  <%= link_to 'Sign in', '/signin' %> | <%= link_to 'Sign up', '/signup' %>
<% end %>

<%= yield %>

</body>
</html>
